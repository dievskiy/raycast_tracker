{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "hours-tracker",
  "title": "Hours Tracker",
  "description": "Track hours for different activities. Great plugin to track working hours or simply time spent reading research papers.",
  "icon": "command-icon.png",
  "author": "dievskiy",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "trackStart",
      "title": "Track Start",
      "subtitle": "Hours tracker",
      "description": "Start tracking hours",
      "mode": "view"
    },
    {
      "name": "trackStop",
      "title": "Track Stop",
      "subtitle": "Hours tracker",
      "description": "Stop tracking hours",
      "mode": "view"
    },
    {
      "name": "topics",
      "title": "Topics Management",
      "subtitle": "Hours tracker",
      "description": "Manage tracking topics",
      "mode": "view"
    },
    {
      "name": "addTopic",
      "title": "Add Topic",
      "subtitle": "Hours tracker",
      "description": "Add new topic",
      "mode": "view"
    },
    {
      "name": "statistics",
      "title": "View Statistics",
      "subtitle": "Hours tracker",
      "description": "View statistics for tracked hours",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.80.0",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
